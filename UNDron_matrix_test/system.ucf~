######################
# Timing Constraints #
######################


NET "clk"   LOC = "P84"	| IOSTANDARD = "LVCMOS33";
NET "clk" TNM_NET = sys_clk;
TIMESPEC TS_sys_clk = PERIOD sys_clk_pin 20.0 ns HIGH 50%;


